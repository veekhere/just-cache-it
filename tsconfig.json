{
  "files": ["src/index.ts"],
  "compilerOptions": {

    /* Language and Environment */
    "target": "ES2015",

    /* Modules */
    "module": "ES2015",
    "rootDir": "src",
    "moduleResolution": "node10",

    /* JavaScript Support */
    "allowJs": false,

    /* Emit */
    "declaration": true,
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  }
}
